# .env.example - Template for PiSelfhosting projects
# Copy this file to .env and fill in your own data.
# NEVER SHARE YOUR REAL .ENV FILE ON GITHUB!

TZ="Europe/Amsterdam"

# --- Home Automation & Security ---
FRIGATE_RTSP_PASSWORD="****"

HA_USER="<your_ha_admin_user>"
HA_PASSWORD="****"

FRIGATE_MQTT_USER="<mqtt_user>"
FRIGATE_MQTT_PASSWORD="****"

HA_MQTT_USER="<mqtt_user>"
HA_MQTT_PASSWORD="****"

# --- Domain Settings ---
DOMAIN="<yourmaindomain.com>"
SECOND_DOMAIN="<yourseconddomain.com>"

# --- System Paths ---
# Full path to your docker projects on the Pi
DOCKER_ROOT="<path_to_your_docker_folder>"

# --- SMTP Relay Settings ---
SMTP_HOST="<smtp.yourprovider.com>"
SMTP_PORT=587
SMTP_TLS="yes"

# --- Nginx Proxy Manager Certificate IDs ---
# IDs can be found in the NPM interface or database
NPM_CERT_ID="<npm-number>"
CHAT_NPM_CERT_ID="<npm-number>"

# --- Matrix / Conduit ---
SIGNUPS_ALLOWED="false"

# --- Smallstep CA Configuration ---
STEP_CA_EMAIL="<email@domain.com>"
STEPCA_PASSWORD="****"
STEP_CA_DNS_IP="<internal_ip_of_ca_server>"
STEPCAT_FINGERPRINT="****"

# --- Backup Settings ---
BACKUP_EMAIL="<backup_alerts@domain.com>"
BACKUP_PASSWORD="****"
BACKUP_RETENTION_DAYS=7

BACKUP_TARGET_USER="<remote_backup_user>"
BACKUP_TARGET_IP="<remote_backup_server_ip>"
BACKUP_TARGET_PATH="<remote_path_like_H:/Backups>"
BACKUP_TARGET_MAC="aa:bb:cc:dd:ee:ff"
BACKUP_TARGET_OS="windows" # Options: windows, linux, mac
BACKUP_MAX_RETRIES=15
BACKUP_RETRY_WAIT=6

# --- Backup Selection ---
INCLUDE_FRIGATE_DATA=false
INCLUDE_NEXTCLOUD_DATA=true

# --- Nextcloud Specific ---
NEXTCLOUD_DOMAIN="<nextcloud.yourdomain.com>"
NEXTCLOUD_DB_USER="nextcloud"
NEXTCLOUD_DB_NAME="nextcloud"
NEXTCLOUD_DB_ROOT_PASSWORD="****"
NEXTCLOUD_DB_PASSWORD="****"

# Nextcloud Mail
NEXTCLOUD_MAIL_FROM_ADDRESS="<from_user>"
NEXTCLOUD_MAIL_DOMAIN="<yourdomain.com>"
NEXTCLOUD_MAIL_SMTPHOST="<smtp.yourprovider.com>"
NEXTCLOUD_MAIL_SMTPPORT="587"
NEXTCLOUD_MAIL_SMTPSECURE="tls"
NEXTCLOUD_MAIL_SMTPAUTH="true"
NEXTCLOUD_MAIL_SMTPNAME="<smtp_user_email>"
NEXTCLOUD_MAIL_SMTPPASSWORD="****"

# --- Forgejo (Git) ---
FORGEJO_DB_USER="forgejo"
FORGEJO_DB_NAME="forgejo"
FORGEJO_DB_PASSWORD="****"

# --- Network & DNS (AdGuard Home) ---
INTERNAL_HOST_IP="<your_pi_internal_ip>"
DNS_SERVER_IP="<external_dns_provider_ip>"
DNS_SERVER_NAME="<secure_dns_provider_name>" Like: secure.dns.freedom.nl
